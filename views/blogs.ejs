            </nav>
            

            <!-- Page Content  -->
            <div id="content" class="container">
                
                <div style="text-align: center;">
                </div>

                
                
                <a href="#" class="float">
                    <img src="/public/img/help.svg" class="my-float" style="width: 30px;height: 30px;" alt="">
                </a>
                
                <!-- Search Section -->
                <section class="search-sec" style="margin-bottom: 100px;">
                    <div class="container" style="justify-content: center;">
                        <form action="#" method="post" novalidate="novalidate">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h2 style="text-align: center;margin-top: 0px;">Search blogs</h2>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-12 p-0">
                                            <input type="text" class="form-control search-slt" placeholder="Eg.Botanical Garden">
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <select class="form-control search-slt" id="exampleFormControlSelect1">
                                                <option>Grade Level</option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                            <button type="button" class="btn btn-danger wrn-btn">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex justify-content-between">
                            <p style="font-size: 22px;">72 results for<span style="font-size: 24px;font-family: ProductB;color: #272727;"> Physics: </span><span style="font-size: 24px;font-family: ProductB;color: #FD585C;">"Refraction of light | Grade 8-9"</span></p>
                            <div class="dropdown" id="dropdownright">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Sort
                                </button>
                                <div class="dropdown-content">
                                    <a class="dropdown-item" href="#">Trending blogs</a>
                                    <a class="dropdown-item" href="#">Most Related</a>
                                    <a class="dropdown-item" href="#">Most Recent</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <h2>Blogs</h2>


                <!-- Testimonials Section -->
                
                <section id="testimonials" class="testimonials">
                    <div class="main-content" data-aos="fade-up">

                    <div class="row">
                        <div class="owl-carousel testimonials-carousel owl-theme">
                            <%blogs.forEach(function(document){%>
                            <div class="col-m-3">
                            <div class="testimonial-item" style="width: 15rem;">
                                <img src="/public/img/download.jpeg" class="testimonial-img" alt="">
                                <h3><%=document.title%></h3>
                                <p><%=document.body%></p>
                                <p id="innerp">
                                    <a href="/blogpreview/<%=document._id%>" style="float:left;color: #fd585c;font-size: medium;padding-left: 5px;">View more</a>
                                    <a href="#" style="float:right;padding-right: 10px;"><i class="far fa-bookmark"></i></a>&nbsp;
                                </p>
                            </div>
                            </div>
                            <%})%>    
                    
                        </div>
                    </div>
                        <div class="owl-theme">
                            <div class="owl-controls">
                                <div class="custom-nav owl-nav"></div>
                            </div>
                        </div>
            
                    </div>
                </section>   


                

                <!-- Testimonials Section -->
